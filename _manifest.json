{
  "manifest_version": 1,
  "name": "GPT-SoVITS-V2 TTS插件",
  "version": "1.8.15",
  "description": "基于 GPT-SoVITS-V2 的文本转语音插件，支持多语言转换，可以通过关键词，指令启动",
  "author": {
    "name": "HatsuYukiAya初雪绫",
    "url": "https://github.com/Shiroha135"
  },
  "license": "MIT",
  "host_application": {
    "min_version": "0.9.0",
    "max_version": "0.11.2"
  },
  "homepage_url": "https://github.com/Shiroha135",
  "repository_url": "https://github.com/Shiroha135/GPT-SoVITS-v2-TTS-Plugin",
  "keywords": [
    "TTS",
    "语音合成",
    "GPT-SoVITS-V2",
    "指令开关",
    "多语言"
  ],
  "categories": [
    "语音",
    "聊天增强"
  ],
  "default_locale": "zh-CN",
  "locales_path": "_locales",
  "plugin_info": {
    "is_built_in": false,
    "plugin_type": "general",
    "components": [
      {
        "type": "action",
        "name": "tts_voice_action",
        "description": "将文本内容转换为语音并发送，/vitsmode on启用全局TTS模式"
      }
    ]
  }
}